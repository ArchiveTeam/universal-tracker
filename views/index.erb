<!DOCTYPE html>
<html>
<head>
  <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
  <meta name="robots" content="noindex,nofollow" />
  <title><%= tracker["title"] %> Dashboard</title>
  <link href="http://fonts.googleapis.com/css?family=Lato:300" rel="stylesheet" type="text/css" />
  <link href="/css/dashboard.css?<%= version %>" rel="stylesheet" type="text/css" />
</head>

<body>

<div id="container">
  <h1><%= tracker["title"] %></h1>
  <p id="update-status"></p>
  <div id="left"><p>Loading...</p></div>

  <div class="log">
    <table cellspacing="0">
      <tbody id="log"></tbody>
    </table>
  </div>

  <div id="chart-container"></div>
</div>

<script type="text/javascript">
window.trackerConfig = {
  movingAverageInterval: <%= tracker["moving_average_interval"] %>,
  numberOfLogLines: 18,
  numberOfDownloaders: 18 - (<%= tracker["domains"].size %>) - 4,
  numberOfDownloadersInGraph: 18 - (<%= tracker["domains"].size %>) - 4,
  statsPath: '/stats.json',
  updateStatusPath: '/update-status.json',
  logChannel: '<%= tracker["log_channel"] %>',
  logHost: '<%= tracker["log_host"] %>',
  domains: <%= JSON.dump(tracker["domains"]) %>
};
</script>
<script src="http://ajax.googleapis.com/ajax/libs/jquery/1.6.1/jquery.min.js" type="text/javascript"></script>
<script src="/js/highcharts.js?<%= version %>" type="text/javascript"></script>
<script src="/js/highstock.js?<%= version %>" type="text/javascript"></script>
<script src="/js/socket.io.js?<%= version %>" type="text/javascript"></script>
<script src="/js/dashboard.js?<%= version %>" type="text/javascript"></script>

</body>

</html>

